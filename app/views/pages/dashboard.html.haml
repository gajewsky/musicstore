.row
  %h1.text-center Dashboard
  .col-md-4
    %h3.text-center My Albums #{link_to 'new album', new_album_path, class: 'btn btn-primary'}
    %table.table.table-hover
      %thead
        %tr
          %th ID
          %th Name
          %th Availability
          %th
      %tbody
        - @albums.each do |album|
          %tr
            %td
              = album.id
            %td
              = link_to album.name, album_path(album)
            %td
              = album.availability
            %td
              = link_to 'Edit', edit_album_path(album)

  .col-md-4
    %h3.text-center My Purchased
  .col-md-4
    %h3.text-center My Sales